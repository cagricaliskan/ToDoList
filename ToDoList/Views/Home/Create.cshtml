@model ToDoList.Models.Todotask


<head>
    <partial name="~/Views/Shared/_Style.cshtml" />
</head>
<div class="row mainbody">
    <h1>Create a new task</h1>
    <div class="col-md-6">
        <form method="post" asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TodotaskName" class="control-label"> Task Name</label>
                <input asp-for="TodotaskName" class="form-control" />
                <span asp-validation-for="TodotaskName" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>

            @Html.ActionLink("Back to main page", "index", "home")
            
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-@ViewBag.Status">@ViewBag.Message</div>
            }
        </form>
    </div>
</div>

