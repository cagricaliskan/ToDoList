@model ToDoList.Models.Todotask

@{
    ViewData["Title"] = "delete";
}

<h1>Delete</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="delete" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TodotaskID"/>
            
            <div class="form-group">
                <label asp-for="TodotaskName" class="control-label">Task Name</label>
                <input asp-for="TodotaskName" class="form-control"/>
                <span asp-validation-for="TodotaskName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

