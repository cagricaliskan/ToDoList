@model ToDoList.Models.Todotask


@{ 
    ViewData["Title"] = "Edit";
    Layout = null;

}
<div  style="width: 80%;" >
    <div class="col-md-12 ">
        <h1>Edit</h1>
        <br />
        <form asp-action="edit" method="post">
            <input type="hidden" asp-for="TodotaskID" class="form input" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="TodotaskName" class="form-control" />
                <span asp-validation-for="TodotaskName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="isDone" class="control-label">
                    Done
                    <input asp-for="isDone" class="form-control" />
                </label>
                <span asp-validation-for="isDone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-@ViewBag.Status">@ViewBag.Message</div>
            }
        </form>
    </div>
</div>

