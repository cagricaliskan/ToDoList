@model ToDoList.Models.Todotask


@{ 
    ViewData["Title"] = "Edit";
    
}

<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="edit" method="post">
            <input type="hidden" asp-for="TodotaskID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="TodotaskName" class="form-control" />
                <span asp-validation-for="TodotaskName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="isDone" class="control-label"></label>
                <input asp-for="isDone" class="form-control" />
                <span asp-validation-for="TodotaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@Html.ActionLink("Back to Menu", "index")


@if(ViewBag.Message != null)
{
   <div class="alert alert-@ViewBag.Status">@ViewBag.Message</div>
}